@using global::Web.Helpers
@model List<Web.Model.Models.Product>
    @if (Model.Count > 0)
    {
        <div class="row">
            @foreach (var item in Model)
            {
                var slugProduct = SlugHelper.Product(item.Id);
                <div class="col-lg-4">
                    <div class="card item-card h-100 border-0">
                        <div class="item-card__image ">
                            <a href="@SlugHelper.Product(item.Id)" title="@item.Title" class="swap-link">
                                <img src="@ImageHelper.GetResize(item.Avatar,285,215)" alt="@item.Title" class="img-fluid ">
                            </a>
                            <div class="hover-icons">
                                <ul class="list-unstyled">
                                    <li><a href="@SlugHelper.Product(item.Id)" title="@item.Title"><i class="las la-desktop"></i></a></li>
                                    <li><a href="#"><i class="lar la-bookmark"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- end: Item card image -->
                        <div class="card-body px-0 pt-3">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="item-title">
                                    <a href="@SlugHelper.Product(item.Id)" title="@item.Title">
                                        <h3 class="h5 mb-0 text-truncate">@item.Name</h3>
                                    </a>
                                </div>
                                <div class="item-price">
                                    <span>@(item.Price ==0 ? "Free" : FormatHelper.FormatCurrency(item.Price))</span>
                                </div>
                            </div>
                            <!-- end: Card info -->
                            <div class="d-flex justify-content-start align-items-center item-meta">
                                <div class="short-description mb-0">
                                    <p class="mb-0 extension-text">
                                        @{
                                            var category = DataWhereHelper.ExtractPrimaryCategory(item.ProductCategoryMappings);
                                        }
                                        <span class="ml-1">in</span> <a href="@SlugHelper.Category(category.Id)">@category.Name</a>
                                    </p>
                                </div>
                            </div>
                            <!-- end: Card meta -->
                        </div>
                        <!-- edn:Card body -->
                    </div>
                    <!-- end: Card -->
                </div>

                <!-- End of .col-lg-3 -->

            }
        </div>
    }
