@using global::Web.Helpers
@model List<Web.Model.Models.Product>
    @if (Model.Count > 0)
    {
               <div class="row">
                   @foreach (var item in Model.Take(9))
                   {
                       

                   <div class="@(Model.Count > 3 ? "col-lg-2":"col-lg-3")  col-md-4">
                       <div class="frame-screen">
                           <div class="dots">
                               <div class="dot"></div>
                               <div class="dot"></div>
                               <div class="dot"></div>
                           </div>
                           <div class="single-preview-item__thumbnail">
                               <div class="content-block m-b-xs-30">
                                   <a href="@SlugHelper.Product(item.Id)" title="@item.Title">
                                       <img class="img-fluid" src="@ImageHelper.GetResize(item.Avatar,300,300)" alt="@item.Title">
                                       <div class="grad-overlay"></div>
                                   </a>
                                   <div class="media-caption">
                                       <div class="caption-content">
                                           <h3 class="axil-post-title hover-line hover-line">
                                               <a href="@SlugHelper.Product(item.Id)" title="@item.Name">@item.Name</a>
                                           </h3>
                                           <div class="caption-meta">
                                               @foreach (var itemTag in item.ProductProductTagMappings.Take(3))
                                               {
                                                   <a href="@SlugHelper.ProductTag(itemTag.ProductTagId)">#@itemTag.ProductTag.Name</a>
                                               }

                                           </div>
                                       </div>
                                       <!-- End of .content-inner -->
                                   </div>
                               </div>
                               <!-- End of .content-block -->
                               <div class="overlay">
                                   <a href="@SlugHelper.Product(item.Id)" title="@item.Title">
                                       <div class="btn-view-demo btn btn--white">
                                           View Demo
                                       </div>
                                   </a>
                                   
                               </div>
                           </div>
                           @*<div class="single-preview-item__info">
                               <h6 class="heading">Creative Two</h6>
                           </div>*@
                       </div>
                    
                   </div>
                       <!-- End of .col-lg-3 -->

                   }
               </div>
    }
