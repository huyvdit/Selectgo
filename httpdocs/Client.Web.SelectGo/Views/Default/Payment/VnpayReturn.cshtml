@using global::Web.Helpers
@{
    ViewBag.Title = LanguageHelper.Translate("VNPay payment returned_Text");

}
@section styles{
   
}
<div class="wrapper">
    <!-- payment completed -->
    <div class="py-10">
        <div class="container">
            <div class="row">
                @if (Request["vnp_ResponseCode"] != "00")
                {
                    <div class="offset-lg-3 col-lg-6 col-md-12 col-12 text-center">
                        <svg class="mb-4 css-i6dzq1" viewBox="0 0 24 24" width="104" height="104" stroke="#f44336" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                        <h2>Your payment is uncompleted!</h2>
                        <p class="mb-4">Thank you for your payment. but unlucky hower you can recharge any time by click link below:</p>
                        <a href="/account/profile/?segment=subscriptions" class="btn btn-info ml-2">View all Subscriptions</a>
                    </div>
                }
                else
                {
                    <div class="offset-lg-3 col-lg-6 col-md-12 col-12 text-center">
                        <svg class="mb-4 css-i6dzq1" viewBox="0 0 24 24" width="104" height="104" stroke="#16D570" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
                        <h2>Your payment is completed!</h2>
                        <p class="mb-4">Thank you for your payment. We recieved your order and will begin processing it soon withing 3 to 5 business days. You will receive an email confirmation when your order is completed.</p>
                        <a href="@SlugHelper.Category(grouped:"our-course")" class="btn btn-primary">Shopping More</a>
                        <a href="/account/profile/?segment=subscriptions" class="btn btn-info ml-2">View all Subscriptions</a>
                    </div>
                }

            </div>
        </div>
    </div>

</div>

@section scripts {
    
    <script type="text/javascript">
       
    </script>
}

