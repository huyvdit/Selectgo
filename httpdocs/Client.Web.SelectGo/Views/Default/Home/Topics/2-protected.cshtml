@model ASP.Web.Model.Models.Page
@Styles.Render("~/bundles/content/default/home/css")
@if (Model.StylesInsert != null)
{
    @(Model.StylesInsert.Contains("<style>") ? Html.Raw(Model.StylesInsert) : Html.Raw("<style>" + Model.StylesInsert + "</style>"))
}
<section class="as-content">
    <div class="section-1 banner position-relative js-section-1">
        <video muted="" playsinline autoplay="autoplay" loop preload="auto"
               class="banner__video">
            <source src="http://lemeridiendanangresortspa.com/media/uploads-1/files/video/home-page-introduce.mp4" type="video/mp4">
        </video>
        <a href="https://www.youtube.com/watch?v=cpv496xOuwI" data-fancybox class="banner__button-play position-absolute">
            
            <span data-aos="fade-right" class="aos-init">UNBACK DESTINATION</span>
            <img src="./assets/images/homepage/play.png" alt="play">
        </a>
        <div class="banner__overlay"></div>
    </div>
    <div class="section-2 js-section-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-12 offset-lg-3 offset-md-2">
                    <div class="card__introduction">
                        <div class="title--default color-light title--line-center title--line-light">
                            le meridien
                            <div class="progress-bar-section js-progres-bar"><span></span></div>
                        </div>
